<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_margin="10dp"
    android:padding="10dp"
    android:background="@drawable/custom_edtkhachthue"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txtMaPhong_itemPhong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã Phòng"
            android:textSize="20sp"
            android:drawableStart="@drawable/ic_baseline_code_24"
            android:drawablePadding="5dp"
            android:textStyle="bold"
            android:textColor="#FF0000"
            android:padding="5dp"
            />
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/itemnhatro"
            android:layout_gravity="center"/>
        <TextView
            android:textColor="#000000"
            android:textStyle="bold"
            android:drawableStart="@drawable/ic_baseline_drive_file_rename_outline_24"
            android:drawablePadding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên Loại Phong"
            android:layout_marginLeft="5dp"
            android:id="@+id/txttenloaiphong_itemPhong"
            android:textSize="20sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtTenPhong_itemPhong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên Phòng"
                android:textColor="#000000"
                android:drawableStart="@drawable/ic_baseline_meeting_room_24"
                android:drawablePadding="5dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="20sp"
                android:padding="5dp"
                />

        </LinearLayout>
        <TextView
            android:id="@+id/txtDienTichPhong_itemPhong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Diện Tích Phòng"
            android:drawableStart="@drawable/ic_baseline_area_chart_24"
            android:drawablePadding="5dp"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="5dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtGiaPhong_itemPhong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000000"
                android:text="Diện Tích Phòng"
                android:drawableStart="@drawable/product_black_24"
                android:textStyle="bold"
                android:textSize="20sp"
                android:padding="5dp"
                />
            <TextView
                android:id="@+id/txttrangthaiphong_itemPhong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trạng Thái Phòng"
                android:textColor="#000000"
                android:layout_marginRight="20dp"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:padding="5dp"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>