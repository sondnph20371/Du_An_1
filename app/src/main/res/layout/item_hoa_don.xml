<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:background="@drawable/custom_edtkhachthue"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">
        <TextView
            android:id="@+id/txtmahoadon_item_hoadon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên Hóa Đơn"
            android:textStyle="bold"
            android:textColor="#E91E63"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_margin="10dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtmaphong_item_hoadon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mã phong"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_margin="10dp"/>
            <TextView
                android:id="@+id/txttenphong_item_hoadon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tên phong"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_margin="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtmakhachhang_item_hoadon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mã khách hàng"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_margin="10dp"/>
            <TextView
                android:id="@+id/txttenkhachhang_item_hoadon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ten khách hàng"
                android:textAlignment="center"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_margin="10dp"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Tiền Điện"
            android:textColor="#000000"
            android:layout_margin="10dp"
            android:textSize="20dp"
            android:id="@+id/txttiendien_itemhoadon"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tiền Nước"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_margin="10dp"
            android:id="@+id/txttiennuoc_itemhoadon"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tiền Vệ Sinh"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_margin="10dp"
            android:id="@+id/txttienvesinh_itemhoadon"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tiền Gữi Xe"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="#000000"
            android:id="@+id/txttienguixe_itemhoadon"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tiền Wifi"
            android:textAlignment="center"
            android:textColor="#000000"
            android:layout_margin="10dp"
            android:textSize="20dp"
            android:id="@+id/txttienwifi_itemhoadon"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tiền Phòng"
            android:layout_margin="10dp"
            android:textColor="#000000"
            android:textAlignment="center"
            android:textSize="20dp"
            android:id="@+id/txttienphong_itemhoadon"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngay Lam"
            android:layout_margin="10dp"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="#000000"
            android:id="@+id/txtngaythu_itemhoadon"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tổng Tiền"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="#FF0000"
            android:id="@+id/txttongtien_itemhoadon"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trạng Thái Thanh Toán"
            android:textAlignment="center"
            android:textColor="#2196F3"
            android:textSize="25dp"
            android:textStyle="bold"
            android:id="@+id/txttrangthaithanhtoan_itemhoadon"/>
        <ImageView
            android:src="@drawable/xoa"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="Xóa Hóa Đơn"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:backgroundTint="#4CAF50"
            android:layout_marginTop="10dp"
            android:id="@+id/btnxoahoadon"/>
    </LinearLayout>
</LinearLayout>