<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_margin="10dp"
        android:background="@drawable/custom_edtkhachthue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/txtMaKhachThue_itemKhachThue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã Khách Thuê"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FF0000"
                android:padding="5dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txthoKhachThue_itemKhachThue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Họ "
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:paddingStart="10dp"
                    android:textSize="20sp"
                    android:padding="5dp"
                    />
                <TextView
                    android:id="@+id/txttenkhachthue_itemKhachThue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên"
                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:textSize="20sp"
                    android:padding="5dp"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtGioiTinh_itemKhachThue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giới Tính"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="5dp"
                />
            <TextView
                android:id="@+id/txtNgaySinh_itemKhachThue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày Sinh"
                android:textColor="#000000"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="20sp"
                android:padding="5dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtSodienThoai_itemKhachThue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số Điện Thoại"
                android:textColor="#000000"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="5dp"
                />
        </LinearLayout>
        <TextView
            android:layout_margin="5dp"
            android:id="@+id/txtCCCD_itemKhachThue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CCCD"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="5dp"
            />
        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtQueQuan_itemKhachThue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quê Quán"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="5dp"
                />
            <TextView
                android:id="@+id/txtNgheNghiep_itemKhachThue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nghề Nghiệp"
                android:textColor="#000000"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="20sp"
                android:padding="5dp"
                />
        </LinearLayout>
    </LinearLayout>

    </LinearLayout>
</LinearLayout>