            android:layout_width="55dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:text=""
            android:backgroundTint="@color/white"
            app:icon="@drawable/outline_add_circle_black_36"
            app:iconSize="25dp"
            app:iconTint="#F44336"/>
    </LinearLayout>
