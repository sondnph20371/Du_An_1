            android:textSize="15dp"
            android:id="@+id/tvHD_TRANGTHAI_Add"
            android:text="Chưa Thanh Toán"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btnHD_True_Add"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:backgroundTint="#FFFFFF"
            app:icon="@drawable/outline_price_check_black_36"
            app:iconPadding="0dp"
            app:iconSize="25dp"
            app:iconTint="#F44336"/>
        <Button
            android:id="@+id/btnHD_False_Add"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:backgroundTint="#FFFFFF"
            app:icon="@drawable/outline_price_check_black_36_"
            app:iconPadding="0dp"
            app:iconSize="25dp"
            app:iconTint="#F44336"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:layout_margin="10dp"
            android:id="@+id/btnHD_Save"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:backgroundTint="#4CAF50"
            android:text="Save"
            app:iconTint="#FFFEFD"/>
    </LinearLayout>
