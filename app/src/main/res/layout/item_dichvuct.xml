<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:background="@drawable/custom_edtkhachthue">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ma Dich Vu"
                android:textSize="20sp"
                android:paddingLeft="10dp"
                android:textColor="#EF0957"
                android:textStyle="bold"
                android:id="@+id/txtMadichvu_itemDichVuCT"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ten Dich Vu"
                android:layout_margin="10dp"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:id="@+id/txttendichvu_itemDichVuCT"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gia"
                android:layout_margin="10dp"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:id="@+id/txtgiadichvu_itemDichVuCT"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ghi chu"
                android:textAlignment="center"
                android:textSize="20sp"
                android:layout_margin="10dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:id="@+id/txtghichu_itemDichVuCT"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Xóa Dịch Vụ"
                android:layout_margin="10dp"
                android:backgroundTint="#4CAF50"
                android:id="@+id/btnxoadichvu"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>