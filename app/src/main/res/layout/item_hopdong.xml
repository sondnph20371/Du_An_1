<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="30dp"
    android:background="@drawable/custom_edtkhachthue"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ma hop dong"
                android:textAlignment="center"
                android:textColor="#E91E63"
                android:id="@+id/txtMahopdong_ItemHopDong"
                android:textSize="20dp"
                android:textStyle="bold"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">
            <TextView
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ma Phong"
                android:textColor="#E91E63"
                android:id="@+id/txtMaPhong_ItemHopDong"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ten Phong"
                android:textColor="#000000"
                android:textAlignment="center"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:id="@+id/txtTenPhong_ItemHopDong"
                android:textSize="20dp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Khach Thue"
                android:id="@+id/txtMakhachthue_ItemHopDong"
                android:textSize="20dp"
                android:textColor="#E91E63"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ten Khach thue"
                android:textColor="#000000"
                android:textAlignment="center"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:id="@+id/txtTenKhachthue_ItemHopDong"
                android:textSize="20dp"
                android:textStyle="bold"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="Que Quan"
            android:id="@+id/txtQueQuan_ItemHopDong"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_margin="10dp"
            android:text="So Dien Thoai"
            android:id="@+id/txtSoDienThoai_ItemHopDong"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="CCCD"
                android:textColor="#000000"
                android:layout_margin="10dp"
                android:id="@+id/txtCCCD_ItemHopDong"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_margin="10dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ngay Lap"
                android:textColor="#000000"
                android:id="@+id/txtngaylap_ItemHopDong"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ngay het han"
                android:layout_margin="10dp"
                android:textColor="#000000"
                android:layout_weight="1"
                android:id="@+id/txtngayhethan_ItemHopDong"
                android:textSize="20dp"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtmadichvu_ItemHopDong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="dich vu"
                android:textColor="#E91E63"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tien Dien"
                android:layout_weight="1"
                android:textColor="#000000"
                android:paddingLeft="20dp"
                android:id="@+id/txtdien_ItemHopDong"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tien Nuoc"
                android:layout_weight="1"
                android:textColor="#000000"
                android:paddingLeft="20dp"
                android:id="@+id/txtnuoc_ItemHopDong"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tien Ve Sinh"
                android:layout_weight="1"
                android:textColor="#000000"
                android:paddingLeft="20dp"
                android:id="@+id/txtvesinh_ItemHopDong"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tien Gui Xe"
                android:layout_weight="1"
                android:textColor="#000000"
                android:paddingLeft="20dp"
                android:id="@+id/txtguixe_ItemHopDong"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dieu Hoa Nong lanh"
                android:layout_weight="1"
                android:textColor="#000000"
                android:paddingLeft="20dp"
                android:id="@+id/txtdieuhoa_ItemHopDong"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tien Wifi"
                android:layout_weight="1"
                android:textColor="#000000"
                android:paddingLeft="20dp"
                android:id="@+id/txtwifi_ItemHopDong"
                android:textSize="20dp"
                android:textStyle="bold"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:text="Giá Phòng"
            android:textColor="#000000"
            android:id="@+id/txtGiaPhong_ItemHopDong"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_margin="10dp"
            android:text="TienCoc"
            android:id="@+id/txtTienCoc_ItemHopDong"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trang Thai"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="25dp"
            android:id="@+id/txtTrangthai_ItemHopDong"/>
