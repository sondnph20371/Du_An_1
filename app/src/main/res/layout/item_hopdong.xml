<!--            android:textSize="20dp"-->
<!--            android:id="@+id/imgxoa_hopdong"-->
<!--            android:layout_marginBottom="10dp"-->
<!--            android:backgroundTint="#4CAF50"/>-->
    </LinearLayout>
</LinearLayout>