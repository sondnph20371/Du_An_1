<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/itemnhatro"
        android:layout_gravity="center"/>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:padding="10dp"
       >
       <TextView
           android:id="@+id/itemThanhLi_tenP"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Tên Phòng"
           android:textColor="#000000"
           android:drawableStart="@drawable/ic_baseline_meeting_room_24"
           android:drawablePadding="5dp"
           android:layout_weight="1"
           android:textStyle="bold"
           android:textSize="20sp"
           android:padding="5dp"
           />

       <TextView
           android:id="@+id/itemThanhli_tenKT"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Tên"
           android:drawableStart="@drawable/ic_baseline_drive_file_rename_outline_24"
           android:drawablePadding="5dp"
           android:textColor="#000000"
           android:layout_weight="1"
           android:textStyle="bold"
           android:textSize="20sp"
           android:padding="5dp"
           />

   </LinearLayout>

</LinearLayout>